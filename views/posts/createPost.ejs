/* ===================== FILE INPUT ===================== */

.navbar {
    
    z-index: 100000;
    display: flex;
    align-items: center;
    justify-content: center;
    background: rgb(253, 253, 253);
    width: 100%;
    border: 1px solid rgb(148, 131, 131);
}

.navbar .container {
    /* background-color: #555; */
    padding: 15px 0;
    width: 75%;
    display: flex;
    align-items: center;
    justify-content: space-between;
    /* margin: 0 auto; */
}.container .logo {
    display: flex;
    cursor: pointer;
    justify-content: space-between;
    width: 70%;
}
@media screen and (max-width: 600px) {
    .container {
        width: 100% !important;
    }

    .navbar .container {
        padding: 15px 10px !important;
    }
  }
.file-area {
  width: 100%;
  position: relative;
  
  input[type=file] {
    border: 2px solid black;
    position: absolute;
    width: 100%;
    height: 100%;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    opacity: 0;
    cursor: pointer;
  }
  
  .file-dummy {
    width: 100%;
    padding: 30px;
    
    border: 2px solid;
    text-align: center;
    transition: background 0.3s ease-in-out;
    
    .success {
      display: none;
    }
  }
  
  &:hover .file-dummy {
    background: rgba(255,255,255,0.1);
  }
  
  input[type=file]:focus + .file-dummy {
    outline: 2px solid rgba(255,255,255,0.5);
    
  }
  
  input[type=file]:valid + .file-dummy {
    border-color: rgba(0,255,0,0.4);
    

    .success {
      display: inline-block;
    }
    .text{
        visibility: visible;
    }
    .default {
      display: none;
    }
  }
}









