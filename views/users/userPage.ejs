<body>
  <header>
    <nav class="navbar">
      <div class="container">


        <div class="logo">
            <a href="/">
                <!-- upload the logo image to cloudinary -->
                <!-- <img src="../../assets/paper-plane.png" alt="img1" height="40px"> -->
                <i class="fa-solid fa-paper-plane"></i>
            </a>
            <a href="/posts/new" class="newpost">
                <!-- <img src="assets/post.png" alt="New Post" height="40px"> -->
                <i class="fa-solid fa-circle-plus"></i>
            </a>
            <a href="/users/notification" class="notification">
                <!-- <img src="assets/notification-bell.png" alt="Notifications" height="40px"> -->
                <i class="fa-solid fa-bell"></i>
            </a>
        </div>

        <!-- current user profile -->
        <a href="/users/profile">
            <i class=" fa fa-solid fa-user fa-xl"></i>
        </a>
      </div>
    </nav>
  </header>

  <main>

    <section class="py-5 text-center container">
      <div class="row py-lg-5">
        <div class="col-md-6">
          <div>
            <img src="https://img.freepik.com/free-psd/3d-illustration-human-avatar-profile_23-2150671142.jpg?w=740&t=st=1706519723~exp=1706520323~hmac=24d138e5d0dbb62517819149691d75d6832aa630914640b0d3a5e42fd5e8ebde" alt="" class="cover">
          </div>
        </div>
        <div class="col-md-6">
          <h1 class="font-weight-light">Hello <%= user.username %></h1>
          
            <p class="lead text-muted"> <%= user.bio %></p>
          
          
          <p>
            <a href="/users/edit" class="btn btn-primary my-2">Edit Profile</a>
            
          </p>
        </div>
      </div>
    </section>


    <div class="album py-5 bg-light">
      <div class="container">

        <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
          
          <% for (post of posts) { %>

            <div class="card" style="width: 18rem;">
              <img height="350px" src="<%= post.image.url %>" class="card-img-top" alt="post-image">
              <div class="card-body">
                <p class="card-text"><b><%= post.content %></b></p>
              </div>
            </div>
         
          <% } %>

        </div>
      </div>
    </div>

  </main>

